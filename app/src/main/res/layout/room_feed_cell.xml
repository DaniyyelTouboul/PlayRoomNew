<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardElevation="8dp"
    card_view:contentPadding="20dp"
    card_view:cardCornerRadius="10dp"
    android:layout_marginTop="10sp">

    <RelativeLayout
        android:id="@+id/realtiveLayoutCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profilePictureFeed"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/circleprofilepic" />

        <TextView
            android:id="@+id/profileNameFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/profilePictureFeed"
            android:text="Eldar Arts "
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/timeForRoomFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileNameFeed"
            android:layout_alignStart="@+id/profileNameFeed"
            android:text="Just Joined a Room"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/generesDisFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeForRoomFeed"
            android:layout_alignStart="@+id/profileNameFeed"
            android:text="Genres: Trap, House, Chill"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilePictureFeed"
            android:text="Current Song"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:id="@+id/currentSongTVFeed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentSongTVFeed"
            android:text="Black Coast - TRNDSTTR R..."
            android:textColor="@color/colorPrimaryText"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/songNameFeed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/byFeed"
            android:layout_alignBottom="@+id/artistNameFeed"
            android:text="By: "
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/byFeed"
            android:layout_below="@id/songNameFeed"
            android:text="Trap Nation"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20dp"
            android:id="@+id/artistNameFeed"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/artistNameFeed"
            android:src="@drawable/videophoto"
            android:id="@+id/videoPhotoFeed"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videoPhotoFeed">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:text="Join"
                    android:textSize="30dp"
                    android:layout_gravity="start"
                    android:background="@color/cardview_light_background"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="false"
                    android:id="@+id/joinBtnFeed"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="30dp"
                    android:layout_toEndOf="@id/joinBtnFeed"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:id="@+id/songCounterFeed" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@+id/songCounterFeed"
                    android:layout_alignBottom="@id/songCounterFeed"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/songnumber"
                    android:id="@+id/songCounterFeedPicture"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="30dp"
                    android:layout_toEndOf="@id/songCounterFeed"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:id="@+id/usersInsideFeed" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@+id/usersInsideFeed"
                    android:layout_alignBottom="@id/songCounterFeed"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/numberofpeople"
                    android:id="@+id/usersInsideFeedPicture"/>


            </RelativeLayout>
        </LinearLayout>




    </RelativeLayout>


    </android.support.v7.widget.CardView>